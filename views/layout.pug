doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    block scripts
      script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js'
        integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo'
        crossorigin='anonymous')
      script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js'
        integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM'
        crossorigin='anonymous')


body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
      a.navbar-brand(href='#') Friends App
      button.navbar-toggler(type='button' data-toggle='collapse'
        data-target='#friendsNavbar' aria-controls='friendsNavbar'
        aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      .collapse.navbar-collapse(id='friendsNavbar')
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/') Home

          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(href='#' id='drop1' data-toggle='dropdown'
              aria-haspopup='true' aria-expanded='false') Friends CRUD
            .dropdown-menu(aria-labelledby='drop1')
              a.dropdown-item(href='/show-friends') Show Friends
              a.dropdown-item(href='/add-friend') Add Friend
              a.dropdown-item(href='/update-friend') Update Friend
              a.dropdown-item(href='/remove-friend') Remove Friend
          li.nav-item
            a.nav-link(href="#") About
    block content
